<Window x:Class="Password_Strengh_Indicator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Password_Strengh_Indicator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!--TextBlock-->
        <TextBlock Text="Password" Height="40" Width="80"
                   FontSize="18" Margin="0,0,300,0"/>
        <TextBlock Name="Indicator" Text="" Height="40" 
                   Width="120" FontSize="18" Margin="420,0,0,0"/>
        
        <!--PasswordBox-->
        <PasswordBox Name="Password" Height="40" Width="240"
                     FontSize="18" Margin="50,0,0,20"
                     VerticalContentAlignment="Center"/>
        
        <!--Button-->
        <Button Name="CheckPassword" Content="Check"
                Height="40" Width="80" Margin="0,100,0,0"
                FontSize="20" FontWeight="Bold" Click="CheckPassword_Click"/>
    </Grid>
</Window>
